`timescale 1 ps/ 1 ps
module lab3_vlg_sample_tst(
	BUTTON,
	CLOCK_50_2,
	sampler_tx
);
input [0:0] BUTTON;
input  CLOCK_50_2;
output sampler_tx;

reg sample;
time current_time;
always @(BUTTON or CLOCK_50_2)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module lab3_vlg_check_tst (
	pobe_reg,
	sampler_rx
);
input [0:0] pobe_reg;
input sampler_rx;

reg [0:0] pobe_reg_expected;

reg [0:0] pobe_reg_prev;

reg [0:0] pobe_reg_expected_prev;

reg [0:0] last_pobe_reg_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	pobe_reg_prev = pobe_reg;
end

// update expected /o prevs

always @(trigger)
begin
	pobe_reg_expected_prev = pobe_reg_expected;
end



// expected pobe_reg
initial
begin
	pobe_reg_expected[0] = 1'bX;
end 

// expected pobe_reg[0]
initial
begin
	pobe_reg_expected[0] = 1'bX;
end 
// generate trigger
always @(pobe_reg_expected or pobe_reg)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected pobe_reg = %b | ",pobe_reg_expected_prev);
	$display("| real pobe_reg = %b | ",pobe_reg_prev);
`endif
	if (
		( pobe_reg_expected_prev !== 1'bx ) && ( pobe_reg_prev !== pobe_reg_expected_prev )
		&& ((pobe_reg_expected_prev !== last_pobe_reg_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port pobe_reg :: @time = %t",  $realtime);
		$display ("     Expected value = %b", pobe_reg_expected_prev);
		$display ("     Real value = %b", pobe_reg_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_pobe_reg_exp = pobe_reg_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module lab3_vlg_vec_tst();
// constants                                           
// general purpose registers
reg [0:0] BUTTON;
reg CLOCK_50_2;
// wires                                               
wire [0:0] pobe_reg;

wire sampler;                             

// assign statements (if any)                          
lab3 i1 (
// port map - connection between master ports and signals/registers   
	.BUTTON(BUTTON),
	.CLOCK_50_2(CLOCK_50_2),
	.pobe_reg(pobe_reg)
);

// BUTTON
initial
begin
	repeat(31)
	begin
		BUTTON[0] = 1'b0;
		BUTTON[0] = #16000 1'b1;
		# 16000;
	end
	BUTTON[0] = 1'b0;
end 

// BUTTON[0]
initial
begin
	BUTTON[0] = 1'b0;
end 

// CLOCK_50_2
always
begin
	CLOCK_50_2 = 1'b0;
	CLOCK_50_2 = #5000 1'b1;
	#5000;
end 

lab3_vlg_sample_tst tb_sample (
	.BUTTON(BUTTON),
	.CLOCK_50_2(CLOCK_50_2),
	.sampler_tx(sampler)
);

lab3_vlg_check_tst tb_out(
	.pobe_reg(pobe_reg),
	.sampler_rx(sampler)
);
endmodule

